@{
    ViewData["Title"] = "Reporting";
}
<style>
    a.btn:hover {
        -webkit-transform: scale(1.1);
        -moz-transform: scale(1.1);
        -o-transform: scale(1.1);
    }

    a.btn {
        -webkit-transform: scale(0.8);
        -moz-transform: scale(0.8);
        -o-transform: scale(0.8);
        -webkit-transition-duration: 0.5s;
        -moz-transition-duration: 0.5s;
        -o-transition-duration: 0.5s;
    }
</style>
<section class="content-header">
    <h1>
        Reporting
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-edit"></i>Home</a></li>
        <li class="active">Repoting</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- SELECT2 EXAMPLE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Reporting</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>

            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">

                <form asp-action="Exportdata" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" required name="fdate" id="fdate" value='@DateTime.Now.ToString("yyyy-MM-dd")' class="form-control">

                    </div>
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" required name="tdate" value='@DateTime.Now.ToString("yyyy-MM-dd")' id="tdate" class="form-control">

                    </div>
                    <div class="form-group">
                        <label>Select Type Of Report </label>
                        <select name="rpttyp" class="form-control select2" style="width: 100%;">
                            <option value="">Please Select</option>
                            <option value="All Employee Details">All Employee Details</option>
                            <option value="All Client Details">All Client Details</option>
                            <option value="All Stock Details">All Stock Details</option>
                            <option value="Deleted Stock Details">Deleted Stock Details</option>
                            <option value="All Purchase Detatils">All Purchase Detatils</option>
                            <option value="Canceled Purchase Details">Canceled Purchase Details</option>
                            <option value="All Sales Details">All Sales Details</option>
                            <option value="Canceled Sales Details">Canceled Sales Details</option>
                            <option value="All Invoices">All Invoices</option>
                            <option value="Paid Invoices">Paid Invoices</option>
                            <option value="Unpaid Invoices">Unpaid Invoices</option>
                            <option value="Canceled Invoices">Canceled Invoices</option>
                            <option value="All Payments">All Payments</option>
                            <option value="Canceled Payments">Canceled Payments</option>
                        </select>

                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">

                            <button onclick="return confirm('Are you sure want to proceed?')" type="submit" class="btn btn-primary">Export</button>
                        </div>
                    </div>
                </form>

            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>
</section>

