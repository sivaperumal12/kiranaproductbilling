@{
    ViewData["Title"] = "Employee Role";
}
<section class="content-header">
    <h1>
        Create Employee Role
    </h1>
    <ol class="breadcrumb">
       
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- SELECT2 EXAMPLE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Employee Role Creation</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <form asp-action="emproleadd" asp-controller="Home">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row col-md-3"></div>
                        <div class="row col-md-6">
                            <div class="col-md-12 text-center form-group">
                                <label>Name</label>
                                <input required type="text" name="name" id="name" class="form-control">
                            </div>

                            <div class="form-group col-md-12 text-center">
                                <label>Role Permissions</label>
                                <select required name="role" multiple class="form-control select2" style="width:100%">
                                    <option value="">--Please Select--</option>
                                    <option value="Sales">Sales</option>
                                    <option value="New Sales">New Sales</option>
                                    <option value="View Sales">View Sales</option>
                                    <option value="Purchase">Purchase</option>
                                    <option value="New Purchase">New Purchase</option>
                                    <option value="View Purchase">View Purchase</option>
                                    <option value="Stock">Stock</option>
                                    <option value="Employee">Employee</option>
                                    <option value="Add New Employee">Add New Employee</option>
                                    <option value="Edit Employee">Edit Employee</option>
                                    <option value="Employee Role">Employee Role</option>
                                    <option value="Client">Client</option>
                                    <option value="New Client">New Client</option>
                                    <option value="View Client">View Client</option>
                                    <option value="Company Profile">Company Profile</option>
                                    <option value="Billing">Billing</option>
                                    <option value="Invoice">Invoice</option>
                                    <option value="Payment">Payment</option>
                                    <option value="Reporting">Reporting</option>





                                </select>
                            </div>


                        </div>
                        <div class="row col-md-3"></div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="reset" class="btn  btn-primary">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>

            <!-- /.row -->
        </div>
        <!-- /.box-body -->

    </div>
    <!-- /.box -->
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Employee Role Lists</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>S.No</th>

                                <th>Name</th>
                                <th>Permission</th>
                                <th>Creation Date</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itm in ViewBag.usr)
                            {
                                <tr>
                                    <td>@itm.ID</td>

                                    <td>@itm.name</td>
                                    <td>@itm.content</td>
                                    <td>@itm.cdate</td>

                                    <!-- <td><button type="button" class="btn  btn-primary">Edit</button> <button type="button" class="btn  btn-primary">Delete</button></td> -->
                                    <td>
                                        <a href="#" class="btn btn-primary a-btn-slide-text" onclick="del(@itm.ID)">
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                            <span><strong>Delete</strong></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

    <script>
        var id; // global variable
         var sts = '@ViewBag.sts';
    $(document).ready(function () {
        if (sts != "") {
            alert(sts);
        }
    });


        function del(eid) {
            $("#ID").val(eid);
            $('#delete').modal('show');
        }
    </script>
</section>
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="roledel" asp-controller="Home">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>

                </div>
                <div class="modal-body">

                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>
                    <input name="ID" hidden id="ID" type="text" />
                    <br /><br />

                    <div class="form-group">
                        <label for="comment">Reason for Delete:</label>
                        <textarea required class="form-control" rows="5" name="reason" cols="50" id="comment"></textarea>
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>
            </form>

        </div>
        <!-- /.modal-content -->
    </div>
</div>
